<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/pub_color_black"
        android:textSize="@dimen/text_h12"
        tools:text="豆豆小朋友" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/pub_color_gray_666"
        android:textSize="@dimen/text_h12"
        tools:text="南锣鼓巷又开新店了，甜点很好吃，傍晚的红霞很美丽。南锣鼓巷\n又开新店了，甜点很好吃，傍晚的红霞很美丽。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/pub_color_gray_999"
            android:textSize="@dimen/text_h12"
            tools:text="2017-07-24 16:24" />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/pub_btn_blue_arc_selector"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="删除"
            android:textColor="@color/pub_color_white"
            android:textSize="@dimen/text_h12" />

    </LinearLayout>

</LinearLayout>