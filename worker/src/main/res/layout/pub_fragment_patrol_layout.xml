<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@color/pub_color_gray_666"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <com.framework.view.IFView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_font_scan"
                android:textColor="@color/pub_color_white"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="扫一扫"
                android:textColor="@color/pub_color_white"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/pub_color_white" />

        <LinearLayout
            android:id="@+id/ll_operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <com.framework.view.IFView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_font_menu"
                android:textColor="@color/pub_color_white"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="手动巡查"
                android:textColor="@color/pub_color_white"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/pub_bg_cornner_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="巡查记录"
            android:textColor="@color/pub_color_black"
            android:textSize="16dp" />

        <com.framework.view.IFView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_right_arrows"
            android:textColor="@color/pub_color_black"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
